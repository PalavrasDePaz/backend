    "zod": "^3.21.4",
    "reflect-metadata": "~0.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@tsoa/cli": "6.4.0",
    "@tsoa/runtime": "6.4.0",
    "@types/archiver": "^5.3.2",
