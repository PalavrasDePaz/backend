{
  "name": "palavrasdepaz",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "engines": {
    "node": "20.x"
  },
  "_moduleAliases": {
    "@src": "./src",
    "@test": "./src/test"
  },
  "scripts": {
    "test": "jest --projects ./src/test/",
    "start:dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "generate:routes": "tsoa spec-and-routes",
    "build": "rm -rf build && tsoa spec-and-routes && tsc && tsc-alias",
    "start": "node build/index.js",
    "prepare": "test -d .git && npx husky install || echo 'Husky ignorado em produção'",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc src/**/*.ts --write",
    "prettier-watch": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "commit": "cz"
  },
  "dependencies": {
    "@googleapis/drive": "^8.0.0",
